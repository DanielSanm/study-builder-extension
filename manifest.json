{
  "manifest_version": 3,
  "name": "Study Builder",
  "version": "1.0.1",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "icons": {
    "16": "icons/16.png",
    "24": "icons/24.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "background": {
    "service_worker": "service-worker.js"
  },
  "action": {
    "default_icon": {
      "16": "icons/16.png",
      "24": "icons/24.png",
      "32": "icons/32.png",
      "48": "icons/48.png",
      "128": "icons/128.png"
    },
    "default_popup": "popup/popup.html"
  }
}